<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin">

    <Button
        android:id="@+id/userlist"
        android:layout_width="106dp"
        android:layout_height="56dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#009688"
        android:text="List all Users"
        app:layout_constraintBottom_toTopOf="@+id/lt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/lt"
        android:layout_width="407dp"
        android:layout_height="481dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="68dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <TextView
        android:id="@+id/lg"
        android:layout_width="76dp"
        android:layout_height="33dp"
        android:layout_marginStart="332dp"
        android:layout_marginBottom="640dp"
        android:text="Logout"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F40707"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="193dp"
        android:layout_height="39dp"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="4dp"
        android:text="Welcome Admin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#00B309"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/userlist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/add"
        android:layout_width="98dp"
        android:layout_height="54dp"
        android:backgroundTint="#9C27B0"
        android:text="ADD USERS"
        app:layout_constraintBottom_toTopOf="@+id/lt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/pay"
        android:layout_width="113dp"
        android:layout_height="46dp"
        android:layout_marginBottom="556dp"
        android:backgroundTint="#FF8F00"
        android:text="Payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.728"
        app:layout_constraintStart_toEndOf="@+id/userlist" />
</androidx.constraintlayout.widget.ConstraintLayout>